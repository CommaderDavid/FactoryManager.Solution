@{
    Layout = "_Layout";
}

@model Factory.Models.Machine;

<h1>Add a new Machine:</h1>

@using (Html.BeginForm())
{
    @Html.Label("Machine Name:")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.Label("Machine Details:")
    @Html.TextBoxFor(model => model.Details)
    <br>
    @Html.Label("Select Engineer:")
    @Html.DropDownList("EngineerId")
    <br>
    <input type="submit" value="Add new machine" class="btn btn-default" />
}
<h4>@Html.ActionLink("Back to Machine list", "Index", "Machines")</h4>