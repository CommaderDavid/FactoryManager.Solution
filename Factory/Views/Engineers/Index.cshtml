@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Current Engineers Employed:</h1>

@if (@Model.Count == 0)
{
    <h3>You have no Engineers employed yet.</h3>
}

@foreach (Engineer engineer in Model)
{
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}

<h4>@Html.ActionLink("Add new Engineer", "Create", "Engineers")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>