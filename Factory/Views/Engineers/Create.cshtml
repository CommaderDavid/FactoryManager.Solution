@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1>Add a new Engineer:</h1>

@using (Html.BeginForm())
{
    @Html.Label("Engineer Name:")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.Label("Engineer Description:")
    @Html.TextBoxFor(model => model.Description)
    <br>
    @Html.Label("Select Machine:")
    @Html.DropDownList("MachineId")
    <br>
    <input type="submit" value="Add new engineer" class="btn btn-default" />
}

<h4>@Html.ActionLink("Back to Employment list", "Index", "Engineers")</h4>